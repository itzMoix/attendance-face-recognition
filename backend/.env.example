# Variables de Entorno - Backend
# Copiar este archivo a .env y modificar los valores según sea necesario

# ======================================
# Base de Datos PostgreSQL
# ======================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=attendance_db

# ======================================
# Aplicación
# ======================================
APP_NAME=Sistema de Control de Asistencias
APP_VERSION=1.0.0
DEBUG=True

# ======================================
# Seguridad JWT
# ======================================
# IMPORTANTE: Cambiar SECRET_KEY en producción
# Generar con: openssl rand -hex 32
SECRET_KEY=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ======================================
# CORS (Orígenes permitidos)
# ======================================
# Separar múltiples orígenes con comas
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ======================================
# Reconocimiento Facial
# ======================================
FACE_RECOGNITION_THRESHOLD=0.6
FACE_ENCODING_MODEL=large

# ======================================
# Almacenamiento
# ======================================
UPLOAD_DIR=uploads
FACE_PHOTOS_DIR=uploads/faces
ATTENDANCE_SNAPSHOTS_DIR=uploads/snapshots
MAX_UPLOAD_SIZE=5242880
